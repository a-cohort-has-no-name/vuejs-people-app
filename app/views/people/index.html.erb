<div id="app">
  <h4>Total number of people: {{ people.length }}</h4>

  <ul>
    <li v-for="error in errors">{{ error }}</li>
  </ul>
  <!-- NEW PERSON FORM -->
  <h2>Add New Person:</h2>
  <div>
    Name: <input v-model="newPersonName">
    Bio: <input v-model="newPersonBio">
    <button v-on:click="addPerson()">Add Person</button>
  </div>
  <!-- END NEW PERSON FORM -->

  <!-- FILTER INPUTS -->
  Filter by Name: <input v-model="nameFilter" list="names">
  Filter by Bio: <input v-model="bioFilter">
  <!-- END FILTER INPUTS -->
  <datalist id="names">
    <option v-for="person in people">{{ person.name }}</option>
  </datalist>

  <!-- PEOPLE LOOP -->
  <div v-for="person in people" v-if="isValidPerson(person)">
    <h2 v-on:click="toggleBio(person)">{{ person.name }}</h2>
    <h3 v-bind:class="{strike: person.bioVisible}">{{ person.bio }}</h3>
    <button v-on:click="deletePerson(person)">Delete</button>
  </div>
  <!-- END PEOPLE LOOP -->
</div>
